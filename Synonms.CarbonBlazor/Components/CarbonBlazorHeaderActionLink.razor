<li class="cb-header-action-link">
    <a href="@NavigationItem.Href" onclick="@ClickedCallback">@NavigationItem.Text</a>
</li>

@code {
    [Parameter]
    [EditorRequired]
    public NavigationItem NavigationItem { get; set; } = null!;
    
    [Parameter]
    public EventCallback ClickedCallback { get; set; } = EventCallback.Empty;
}
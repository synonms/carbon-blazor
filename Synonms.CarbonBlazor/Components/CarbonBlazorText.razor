@using Synonms.CarbonBlazor.Enumerations

<span class="cb-text @CarbonBlazorTextTypeMapper.ToClass(Type)">@ChildContent</span>

@code {

    [Parameter]
    public CarbonBlazorTextType Type { get; set; } = CarbonBlazorTextType.Body01;
    
    [Parameter]
    [EditorRequired]
    public RenderFragment ChildContent { get; set; } = null!;
}
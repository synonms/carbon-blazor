<fieldset class="cb-field-set @(IsDoubleColumn ? "double" : string.Empty) @(IsInline ? "inline" : string.Empty)" readonly="@IsReadOnly" disabled="@IsDisabled">
    @ChildContent
</fieldset>

@code {

    [Parameter]
    [EditorRequired]
    public RenderFragment ChildContent { get; set; } = null!;

    [Parameter]
    public bool IsDisabled { get; set; }

    [Parameter]
    public bool IsReadOnly { get; set; }

    [Parameter]
    public bool IsDoubleColumn { get; set; }

    [Parameter]
    public bool IsInline { get; set; }
}